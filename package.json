{
  "name": "@cliengo/logger",
  "version": "0.0.0-development",
  "description": "...",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "types": "./lib/cjs/types/index.d.ts",
  "main": "./lib/cjs/index.js",
  "files": [
    "lib/**/*"
  ],
  "engines": {
    "node": ">=14.20.0"
  },
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./configs/tsconfig.esm.json && mv lib/esm/index.js lib/esm/index.mjs",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
    "test": "jest -c jest.config.js --colors --detectOpenHandles --forceExit",
    "semantic-release": "semantic-release",
    "prepack": "npm run build"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Cliengo/logger-lib.git"
  },
  "author": "Technical Solutions (Cliengo)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Cliengo/logger-lib/issues"
  },
  "homepage": "https://github.com/Cliengo/logger-lib#readme",
  "devDependencies": {
    "@types/express-correlation-id": "^1.2.4",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.18",
    "jest": "^29.4.1",
    "semantic-release": "^20.1.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "express-correlation-id": "^2.0.1",
    "logform": "^2.4.2",
    "winston": "^3.8.2"
  }
}
